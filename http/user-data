#cloud-config
# Simple cloud-init configuration for Packer
chpasswd:
  expire: false
  list:
    - ubuntu:ubuntu

ssh_pwauth: true

users:
  - name: ubuntu
    lock_passwd: false
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    groups: [adm, cdrom, dip, plugdev, sudo]

runcmd:
  - systemctl restart ssh
